generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id          String   @id @default(uuid())
  make        String
  modelNumber String
  cpu         String?
  generation  String?
  productName String?
  ram         String?
  ssd         String?
  hdd         String?
  salePrice   Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("products")
}

model SparePart {
  id             String   @id @default(uuid())
  make           String
  modelNumber    String
  cpu            String?
  generation     String?
  productName    String?
  frontPanel     Decimal? @db.Decimal(10, 2)
  panel          Decimal? @db.Decimal(10, 2)
  screenNonTouch Decimal? @db.Decimal(10, 2)
  screenTouch    Decimal? @db.Decimal(10, 2)
  hinge          Decimal? @db.Decimal(10, 2)
  touchPad       Decimal? @db.Decimal(10, 2)
  base           Decimal? @db.Decimal(10, 2)
  keyboard       Decimal? @db.Decimal(10, 2)
  battery        Decimal? @db.Decimal(10, 2)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("spare_parts")
}

model PriceCalculator {
  id                 String   @id @default(uuid())
  productName        String
  tagNo              String?
  grade              String?
  lotNumber          String?
  make               String?
  modelNumber        String?
  cpu                String?
  generation         String?
  ramPresent         Boolean  @default(true)
  ramCapacity        String?
  excelRamCapacity   String?
  hddPresent         Boolean  @default(true)
  hdd                String?
  excelHdd           String?
  ssdPresent         Boolean  @default(true)
  ssd                String?
  excelSsd           String?
  frontPanel         String   @default("ok")
  frontPanelCost     Decimal  @default(0) @db.Decimal(10, 2)
  panel              String   @default("ok")
  panelCost          Decimal  @default(0) @db.Decimal(10, 2)
  screenNonTouch     String   @default("ok")
  screenNonTouchCost Decimal  @default(0) @db.Decimal(10, 2)
  screenTouch        String   @default("ok")
  screenTouchCost    Decimal  @default(0) @db.Decimal(10, 2)
  hinge              String   @default("ok")
  hingeCost          Decimal  @default(0) @db.Decimal(10, 2)
  touchPad           String   @default("ok")
  touchPadCost       Decimal  @default(0) @db.Decimal(10, 2)
  base               String   @default("ok")
  baseCost           Decimal  @default(0) @db.Decimal(10, 2)
  keyboard           String   @default("ok")
  keyboardCost       Decimal  @default(0) @db.Decimal(10, 2)
  battery            String   @default("ok")
  batteryCost        Decimal  @default(0) @db.Decimal(10, 2)
  repairCost         Decimal  @db.Decimal(10, 2)
  salePrice          Decimal  @db.Decimal(10, 2)
  suggestedSalePrice Decimal  @db.Decimal(10, 2)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("price_calculations")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
